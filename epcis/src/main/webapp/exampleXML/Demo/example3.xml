				<eventTime>2017-01-03T00:00:00.000-08:00</eventTime>
				<eventTimeZoneOffset>-08:00</eventTimeZoneOffset>
				<!-- A Truck -->
				<parentID>urn:epc:id:sscc:0000002.0000000001</parentID>
				<!-- The cow -->
				<childEPCs>
					<epc>urn:epc:id:sgtin:0000001.000001.1</epc>
