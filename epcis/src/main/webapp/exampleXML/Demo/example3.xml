				<bizStep>urn:epcglobal:cbv:bizstep:unloading</bizStep>
				<!-- Canning Factory -->
				<bizLocation>
					<id>urn:epc:id:sgln:0000003.00001.1</id>
				</bizLocation>
				<!-- Geospatial support of Oliot EPCIS (longitude,latitude^geoPoint) -->
